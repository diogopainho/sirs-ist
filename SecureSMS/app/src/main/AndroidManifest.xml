<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.meic.sirs.securesms" >

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name="pt.ulisboa.tecnico.meic.sirs.securesms.SecureSMSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark" >


        <meta-data android:name="AA_DB_NAME" android:value="SecureSMS.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <activity android:name=".LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactListActivity"
            android:label="@string/title_activity_contact_list"
            android:theme="@style/AppTheme.Dark" >
        </activity>
        <activity android:name=".FirstLoginActivity" >
        </activity>
        <activity
            android:name=".SmsListActivity"
            android:label="@string/title_activity_sms_list"
            android:theme="@style/AppTheme.Dark" >
        </activity>
        <activity
            android:name=".SmsComposerActivity" >
        </activity>
        <activity
            android:name=".AddContactActivity" >
        </activity>
        <activity
            android:name=".ScanQRCodeActivity" >
        </activity>
        <activity
            android:name=".GenerateQRCodeActivity" >
        </activity>
        <activity
            android:name=".ConversationActivity" >
        </activity>
        <receiver android:name="pt.ulisboa.tecnico.meic.sirs.securesms.SmsReceiver" android:enabled="true">
            <intent-filter android:priority="214748364">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
